<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.AccountActivity">

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOGOUT"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />
    <EditText
        android:id="@+id/etUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="username"/>
    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="enter e-mail to reset password"/>
    <Button
        android:id="@+id/btnResetPassword"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="RESET PASSWORD" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />
    <EditText
        android:id="@+id/etAddressLine1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="line 1*"/>
    <EditText
        android:id="@+id/etAddressLine2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="line 2"/>
    <EditText
        android:id="@+id/etAddressLine3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="line 3"/>
    <EditText
        android:id="@+id/etAddressCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="city*"/>
    <EditText
        android:id="@+id/etAddressState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="state*"/>
    <EditText
        android:id="@+id/etAddressZip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="zip*"/>
    <Button
        android:id="@+id/btnSaveChanges"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SAVE CHANGES" />

</LinearLayout>