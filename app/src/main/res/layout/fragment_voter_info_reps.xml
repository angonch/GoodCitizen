<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.VoterInfoRepsFragment">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tlVoterInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@color/colorPrimary">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_reps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Representatives" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_jurisdiction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jurisdiction Info" />

    </com.google.android.material.tabs.TabLayout>

    <FrameLayout
        android:id="@+id/flVoterInfoContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tlVoterInfo"/>

</RelativeLayout>